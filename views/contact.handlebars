<h1 class="form-header">Contact Us</h1>

<!-- Form -->
<form action="/contact" id="contact-form_id" class="panel" method="POST">
  <input type="hidden" name="_csrf" value={{_csrf}}>

  <div class="form-group">
    <input type="text" name="name" id="name_id" class="form-control input-lg" placeholder="Name" autofocus="true">
  </div>

  <div class="form-group">
    <input type="email" name="email" id="email_id" class="form-control input-lg" placeholder="Email address">
  </div>

  <div class="form-group">
    <textarea type="text" name="message" id="message_id" class="form-control input-lg" placeholder="Message" rows="7">
    </textarea>
  </div>


  <div class="form-actions">
    <button type="submit" class="btn btn-primary btn-block btn-lg">
      <span class="ion-paper-airplane"></span> Send
    </button>
  </div> <!-- / .form-actions -->
</form>
<!-- / Form -->
